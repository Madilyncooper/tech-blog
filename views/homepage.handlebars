<h1>This is the homepage</h1>
{{> nav}}
<div>
    {{#if name}}
    <p>Welcome back {{name}}</p>
    {{/if}}
</div>

{{#if blogContent.[0].id}}
{{#each blogContent}}
<div class="card">
    <ul class="card-body">
        <li>
            <h2>
                <a href="/comment/{{this.id}}">{{this.title}}</a>
            </h2>
            <p>{{this.content}}</p>
            <p>Posted by {{this.user.name}} on {{format_date this.date}}</p>
        </li>
       
    </ul>
     {{/each}}
</div>
{{else}}
<h2>There are no blog posts at this time. Check back in for new postings!</h2>
{{/if}}