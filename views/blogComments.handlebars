  <form id="new-comment-form" class="card mt-5 me-3 ms-3 w-25">
    <div class="card-header text-light bg-success">
      <h3 class="fs-6">Add New Comment</h3>
    </div>

    <div class="card-body d-flex flex-column">
      <input type="hidden" name="post-id" value="{{blogComment.[0].id}}" />

      <label class="form-label fs-6" for="comment-body">Comment:</label>

      <textarea name="comment-body" class="form-input rounded border border-secondary-subtle"></textarea>

      <button type="submit" class="btn btn-warning text-light mt-2">Submit</button>
    </div>
  </form>
